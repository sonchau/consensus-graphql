{
  "name": "task-mate-api",
  "version": "1.0.0",
  "license": "ISC",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start:dev": "node dist/index.js",
    "dev": "concurrently \"tsc -w\" \"nodemon dist dist/index.js\"",
    "build-ts": "tsc",
    "postinstall": "npm run build-ts",
    "start": "npm run serve",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "apollo-server-express": "^2.14.2",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.1.1",
    "typeorm": "^0.2.21"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/graphql": "^14.5.0",
    "concurrently": "^5.0.0",
    "nodemon": "^2.0.1",
    "typescript": "^3.7.3"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "src/*",
      "db/*"
    ]
  }
}
